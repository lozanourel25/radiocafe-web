---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
 <body>
    <div id="lunaradio_id" style="width:100%; height:65px; margin-top:10px;"></div>

    <script src="https://lunaradio.net/livestream/js/jquery-3.2.1.min.js"></script>
    <script src="https://lunaradio.net/livestream/js/lunaradio-anim.js"></script>

    <script>
    $("#lunaradio_id").lunaradio({
        userinterface: "big",
        backgroundcolor: "rgba(35,38,45,1)",
        fontcolor: "#ffffff",
        hightlightcolor: "#f39c12",
        fontfamily: "Saira Condensed, sans-serif",
        basefontcolor: "#ffffff",
        startvolume: "60",
        visualizer: "true",
        color1: "#f39c12",
        color2: "#d35400",
        color3: "#e67e22",
        color4: "#ffffff",
        displaynowplaying: "true",
        radioname: "Caf√© con Radio",
        streamurl: "https://stream.zeno.fm/9kt8dngtou8tv",
        streamtype: "shoutcast2",
        idshoutcast: "1",
        shoutcastpath: "/stream",
        metadatainterval: "5000",
    });
    </script>
    <slot />
  </body>
    <slot />
  </body>
</html>

<style>
  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: #f8fafc;
  }

  html {
    font-family: system-ui, sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
  }

  :global(h1) {
    font-size: var(--font-size-xl);
  }

  :global(h2) {
    font-size: var(--font-size-lg);
  }

  :global(code) {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  :global(p) {
    line-height: 1.6;
  }
</style>
<slot />
  </body>
</html>
