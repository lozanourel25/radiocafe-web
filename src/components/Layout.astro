---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <div id="lunaradio_id" style="width:100%; height:65px; margin-top:10px;"></div>

    <script is:inline src="https://lunaradio.net/livestream/js/jquery-3.2.1.min.js"></script>
    <script is:inline src="https://lunaradio.net/livestream/js/lunaradio-anim.js"></script>

    <script is:inline>
    $(document).ready(function() {
        $("#lunaradio_id").lunaradio({
            userinterface: "big",
            backgroundcolor: "rgba(35,38,45,1)",
            fontcolor: "#ffffff",
            hightlightcolor: "#f39c12",
            fontfamily: "Saira Condensed, sans-serif",
            basefontcolor: "#ffffff",
            startvolume: "60",
            visualizer: "true",
            color1: "#f39c12",
            color2: "#d35400",
            color3: "#e67e22",
            color4: "#ffffff",
            displaynowplaying: "true",
            radioname: "Caf√© con Radio",
            streamurl: "https://stream.zeno.fm/9kt8dngtou8tv",
            streamtype: "shoutcast2",
            idshoutcast: "1",
            shoutcastpath: "/stream",
            metadatainterval: "5000",
        });
    });
    </script>
    
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }
</style>
